
<h2>Throw or Take Over a House</h2>

<%= form_for @house do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :location %>
  <%= f.text_field :location %>

  <%= f.label :photo_url %>
  <%= f.text_field :photo_url %>

  <%= f.submit %>
<% end %>

<%= form_for @house, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
